                //        keyValue: App.GP_Left.getSelectionModel().hasSelection() ? App.GP_Left.getSelectionModel().getSelection()[0].data.F_Id : ''
                //    },
                //    success: function (data) {
                //        App.FP_Right.getForm().reset();
                //        App.GP_Left.store.reload();
                //        App.GP_Left.getSelectionModel().clearSelections();
                //        App.GP_Left.getView().refresh();
                //    },
                //    error: function () {
                //        alert("Error")
